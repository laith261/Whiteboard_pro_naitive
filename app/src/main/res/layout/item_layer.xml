<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imgDragHandle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="Drag Handle"
        android:src="@drawable/ic_drag_handle"
        app:tint="@color/primary_text" />

    <ImageView
        android:id="@+id/imgShapePreview"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="Shape Preview"
        android:padding="4dp"
        android:src="@drawable/ic_square_shape"
        app:tint="@color/primary_text" />

    <TextView
        android:id="@+id/txtLayerName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Layer Name"
        android:textColor="@color/primary_text"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/btnSelect"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Edit"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/select_icon"
        app:tint="@color/primary_text" />

    <ImageButton
        android:id="@+id/btnDuplicate"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Duplicate"
        android:src="@drawable/ic_content_copy"
        app:tint="@color/primary_text" />

    <ImageButton
        android:id="@+id/btnDelete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Delete"
        android:src="@drawable/ic_delete_outline"
        app:tint="@color/primary_text" />

</LinearLayout>
