<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <!-- Canvas fills the screen -->
    <com.joory.whiteboardapp.MyCanvas
        android:id="@+id/canvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Top Floating Toolbar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/bg_floating_panel"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="4dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/undo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:alpha=".5"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Undo"
            android:onClick="onUndoClick"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_undo"
            app:tint="@color/icon_tint" />

        <ImageView
            android:id="@+id/redo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:alpha=".5"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Redo"
            android:onClick="onRedoClick"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_redo"
            app:tint="@color/icon_tint" />

        <ImageButton
            android:id="@+id/clear"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Clear"
            android:onClick="onClearClick"
            android:padding="8dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_delete_outline"
            app:tint="@color/icon_tint" />

        <ImageButton
            android:id="@+id/layers"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Layers"
            android:onClick="onLayersClick"
            android:padding="8dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_layers"
            app:tint="@color/icon_tint" />

        <ImageButton
            android:id="@+id/save"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Save"
            android:onClick="onSaveClick"
            android:padding="8dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_save"
            app:tint="@color/icon_tint" />

    </LinearLayout>

    <!-- Bottom AdView -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-1226999690478326/1224157144"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Bottom Floating Toolbar -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_floating_panel"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:padding="4dp"
        app:layout_constraintBottom_toTopOf="@id/adView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <HorizontalScrollView
            android:id="@+id/myscroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/tools"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Tools"
                    android:onClick="onToolsClick"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    ads:srcCompat="@drawable/stationery"
                    app:tint="@color/icon_tint" />

                <ImageButton
                    android:id="@+id/font_style"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Font"
                    android:onClick="onFontClick"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:visibility="gone"
                    ads:srcCompat="@drawable/font"
                    app:tint="@color/icon_tint" />

                <ImageButton
                    android:id="@+id/crop"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Crop"
                    android:onClick="startCrop"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    ads:srcCompat="@drawable/crop"
                    app:tint="@color/icon_tint" />

                <ImageButton
                    android:id="@+id/color"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Color"
                    android:onClick="onColorClick"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_color_lens"
                    app:tint="@color/icon_tint" />

                <ImageButton
                    android:id="@+id/style"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Style"
                    android:onClick="onStyleClick"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    ads:srcCompat="@drawable/style"
                    app:tint="@color/icon_tint" />

                <ImageButton
                    android:id="@+id/strokewidth"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Stroke"
                    android:onClick="showStrokeDialog"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_line_weight"
                    app:tint="@color/icon_tint" />

                <ImageButton
                    android:id="@+id/colorbg"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Background Color"
                    android:onClick="onColorBgClick"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_format_color_fill"
                    app:tint="@color/icon_tint" />

                <ImageButton
                    android:id="@+id/imgbg"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Background Image"
                    android:onClick="onImageBgClick"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_image"
                    app:tint="@color/icon_tint" />

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>