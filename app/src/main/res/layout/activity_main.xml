<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/prem"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />


            <ImageView
                android:id="@+id/undo"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:alpha=".5"
                app:srcCompat="@drawable/ic_undo" />

            <ImageView
                android:id="@+id/redo"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:alpha=".5"
                app:srcCompat="@drawable/ic_redo" />

            <ImageButton
                android:id="@+id/clear"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:scaleX="1.5"
                android:scaleY="1.5"
                app:srcCompat="@drawable/ic_delete_outline" />

            <ImageButton
                android:id="@+id/save"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:scaleX="1.5"
                android:scaleY="1.6"
                app:srcCompat="@drawable/ic_save" />

        </LinearLayout>

        <com.joory.whiteboardapp.MyCanvas
            android:id="@+id/canvas"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </com.joory.whiteboardapp.MyCanvas>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/prem"
            app:itemHorizontalTranslationEnabled="false">

            <HorizontalScrollView
                android:id="@+id/myscroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:touchscreenBlocksFocus="false">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/tools"
                        android:layout_width="72dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        android:contentDescription="TODO"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        ads:srcCompat="@drawable/stationery" />



                    <ImageButton
                        android:id="@+id/crop"
                        android:layout_width="72dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        ads:srcCompat="@drawable/crop" />

                    <ImageButton
                        android:id="@+id/color"
                        android:layout_width="72dp"
                        android:layout_height="match_parent"
                        android:background="#00FFFFFF"
                        android:contentDescription="TODO"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        android:scaleX="1.5"
                        android:scaleY="1.5"
                        app:srcCompat="@drawable/ic_color_lens" />

                    <ImageButton
                        android:id="@+id/style"
                        android:layout_width="72dp"
                        android:layout_height="match_parent"
                        android:background="#00FFFFFF"
                        android:contentDescription="TODO"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        ads:srcCompat="@drawable/style"/>

                    <ImageButton
                        android:id="@+id/strokewidth"
                        android:layout_width="72dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        android:contentDescription="TODO"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        android:scaleX="1.5"
                        android:scaleY="1.5"
                        app:srcCompat="@drawable/ic_line_weight" />

                    <ImageButton
                        android:id="@+id/textSize"
                        android:layout_width="72dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        android:contentDescription="TODO"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        android:scaleX="1.5"
                        android:scaleY="1.5"
                        ads:srcCompat="@drawable/ic_text_fields" />

                    <ImageButton
                        android:id="@+id/colorbg"
                        android:layout_width="72dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        android:scaleX="1.5"
                        android:scaleY="1.5"
                        app:srcCompat="@drawable/ic_format_color_fill" />

                    <ImageButton
                        android:id="@+id/imgbg"
                        android:layout_width="72dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/ic_image" />

                </LinearLayout>
            </HorizontalScrollView>

        </com.google.android.material.bottomnavigation.BottomNavigationView>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="5dp" />

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            app:adUnitId="ca-app-pub-1226999690478326/1224157144" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>